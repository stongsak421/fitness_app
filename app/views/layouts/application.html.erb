<!DOCTYPE html>
<html>
  <head>
    <title>FitnessApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css' %>
  </head>



  <body>
    <header>
      <nav class="navbar navbar-dark bg-dark">
        <%= link_to home_path do %>
          <h1 id="site_title">Move & Groove</h1>
        <% end %>


          <div class="btn-group" role="group" >
            <% if current_user %>
              <button type="button" class="btn btn-light"><%= link_to "Create Activity", new_post_path, :class => "btn"  %></button>
              <button type="button" class="btn btn-light"><%= link_to "All Activities", activites_path, :class => "btn"  %></button>
              <button type="button" class="btn btn-light"><%= link_to "Log Out", destroy_user_session_path, :class => "btn"  %></button>
            <% else %>
              <button type="button" class="btn btn-light"><%= link_to "Log In", new_user_session_path, :class => "btn"  %></button>
              <button type="button" class="btn btn-light"><%= link_to "Register", new_user_registration_path, :class => "btn" %></button>
            <% end %>
          </div>
      </nav>
    </header>

      <div class="container">
        <% if notice %>
          <p class="alert alert-success"><%= notice %></p>
        <% end %>
        <% if alert %>
          <p class="alert alert-danger"><%= alert %></p>
        <% end %>
        <%= yield %>
      </div>

      <footer>
        <div class="container">
          <div class="row">
            <div class="col">
              <%= link_to home_path do %>  
                <h3 id="site_title">Moove & Groove</h3>
              <% end %>
            </div>
            <div id="footer_links" class="col">
              <%= link_to "Home", home_path %> <br>
              <%= link_to "About", about_path %></button> <br>
            </div>

        </div>
      </div>
      </footer>

  </body>
</html>
